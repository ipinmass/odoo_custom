<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="twilio_whasapp_config_view" model="ir.ui.view">
            <field name="name">res.config.settings.view.twilio.config</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='inter_company']" position="after">
                    <field name="company_id" invisible="1"/>
                    <setting id="twilio_whatsapp" string="Twilio Credentials" company_dependent="1" help="Twilio Credential Configurations">
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Account SID" for="twilio_account_sid" class="col-lg-3 o_light_label"/>
                                <field name="twilio_account_sid"/>
                            </div>
                            <div class="row">
                                <label string="Auth" for="twilio_auth_token" class="col-lg-3 o_light_label"/>
                                <field name="twilio_auth_token" />
                            </div>
                            <div class="row">
                                <label string="WhasApp No" for="twilio_whatsapp_no" class="col-lg-3 o_light_label"/>
                                <field name="twilio_whatsapp_no" />
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
</odoo>
