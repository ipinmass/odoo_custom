<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="twilio_record_view_form" model="ir.ui.view">
            <field name="name">Tags</field>
            <field name="model">twilio.whatsapp</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <header>
                            <button name="action_send" string="Send" type="object" class="oe_highlight"/>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <group >
                            <field name="sender"/>
                            <field name="receiver"/>
                            <field name="origin" widget="reference"/>
                            <field name="body" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="twilio_record_view_tree" model="ir.ui.view">
            <field name="name">WhatsApp</field>
            <field name="model">twilio.whatsapp</field>
            <field name="arch" type="xml">
                <tree string="WhatsApp">
                    <field name="sender"/>
                    <field name="receiver"/>
                </tree>
            </field>
        </record>

        <record id="twilio_record_view_search" model="ir.ui.view">
            <field name="name">account.tag.view.search</field>
            <field name="model">twilio.whatsapp</field>
            <field name="arch" type="xml">
                <search>
                    <field name="sender"/>
                    <field name="receiver"/>
                    <field name="res_model"/>
                </search>
            </field>
        </record>

         <record id="action_twilio_whatsapp" model="ir.actions.act_window">
            <field name="name">WhatsApp</field>
            <field name="res_model">twilio.whatsapp</field>
            <field name="view_id" ref="twilio_record_view_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No WhatsApp Messeges yet
              </p>
            </field>
        </record>

        <menuitem action="action_twilio_whatsapp" id="menu_action_twilio_whatsapp"
            parent="base.menu_email" sequence="1"/>


    </data>
</odoo>
