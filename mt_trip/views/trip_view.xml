<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="trip_view_form" model="ir.ui.view">
            <field name="name">trip.view.form</field>
            <field name="model">mt.trip</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Trip">
                    <header>
                        <button name="action_close_registration" type="object" state="open" string="Close Registration" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <button name="make_done" type="object" string="Make Done" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'progress')]}"/>
                        <button name="re_open" type="object" string="Re-Open" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'progress')]}"/>
                        <button name="make_cancel" type="object" string="Cancel" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['done','cancel'])]}" groups="mt_trip.mt_group_trip_cancel"/>
                        <button name="action_show_member_list" type="object" string="List all Members"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly': [('state', 'in', ['done','cancel','progress'])]}"/>
                                <field name="trip_template" attrs="{'readonly': [('state', 'in', ['done','cancel','progress'])]}"/>
                                <field name="fare" attrs="{'readonly': [('state', 'in', ['done','cancel','progress'])]}"/>
                            </group>
                            <group>
                                <field name="planned_date" attrs="{'readonly': [('state', 'in', ['done','cancel','progress'])]}"/>
                                <field name="admin" attrs="{'readonly': [('state', 'in', ['done','cancel','progress'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Members" >
                                <field name="member_ids" attrs="{'readonly': [('state', 'in', ['done','cancel','progress', 'progress'])]}" context="{'trip_id': id}">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="partner_id"/>
                                        <field name="invoice_ids" invisible="1"/>
                                        <field name="document_ids" invisible="1"/>
                                        <field name="is_document_completed"/>
                                        <field name="reseller"/>
                                        <field name="is_reseller_paid"/>
                                        <button name="action_documents_create" string="Register Documents" type="object" attrs="{'invisible': [('document_ids', '!=', [])]}"/>
                                        <field name="is_invoice_paid"/>
                                        <button name="action_invoice_create" string="Create Invoices" type="object" attrs="{'invisible': [('invoice_ids', '!=', [])]}"/>
                                        <button name="action_invoice_show" string="Show Invoices" type="object" attrs="{'invisible': [('invoice_ids', '=', [])]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Personal Expenses">
                                <field name="id" invisible="1"/>
                                <field name="personal_expenses" context="{'personal': True, 'trip_id': id}" attrs="{'readonly': [('state', 'in', ['done','cancel'])]}">
                                    <tree string="Personal Expenses" editable="bottom">
                                        <field name="personal" invisible="1"/>
                                        <field name="name"/>
                                        <field name="expense_type" domain="[('personal', '=', True)]"/>
                                        <field name="partner_id"/>
                                        <field name="dtof_birth"/>
                                        <field name="ktp_no"/>
                                        <field name="passport_no"/>
                                        <field name="passport_exp"/>
                                        <field name="passport_issued"/>
                                        <field name="amount"/>
                                        <field name="code"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            
                            </page>
                            <page string="General Expenses">
                                <field name="expense_ids" context="{'personal': False}" attrs="{'readonly': [('state', 'in', ['done','cancel'])]}">
                                    <tree string="Expenses" editable="bottom">
                                        <field name="personal" invisible="1"/>
                                        <field name="name"/>
                                        <field name="expense_type" domain="[('personal', '=', False)]"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Profit Summary">
                                <group>
                                    <field name="total_expenses" widget='monetary'/>
                                    <field name="forcasted_income" widget='monetary'/>
                                    <field name="invoice_paid" widget='monetary'/>
                                    <field name="profit_loss" widget='monetary'/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="mt_trip_tree_view" model="ir.ui.view">
            <field name="name">mt.trip.tree</field>
            <field name="model">mt.trip</field>
            <field name="arch" type="xml">
                <tree string="Trip">
                   <field name="name"/>
                   <field name="planned_date"/>
                   <field name="state"/>
               </tree>
            </field>
        </record>

        <record id="mt_trip_search_view" model="ir.ui.view">
            <field name="name">mt.trip.search</field>
            <field name="model">mt.trip</field>
            <field name="arch" type="xml">
                <search string="Search Trip">
                   <field name="name"/>
                   <!-- <field name="partner_id"/> -->
                   <group expand="0" name="group_by" string="Group By">
                       <filter name="name" string="Name" domain="[]" context="{'group_by' : 'name'}" />
                   </group>
               </search>
            </field>
        </record>

        <record id="trip_member_form_view" model="ir.ui.view">
            <field name="name">trip.member.form</field>
            <field name="model">trip.member</field>
            <field name="arch" type="xml">
                <form string="Trip Member">
                    <group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="dp_amount"/>
                            <field name="dp_proof"/>
                            <field name="discount"/>
                            <field name="payment_type" invisible="1"/>
                            <field name="payment_term_id" attrs="{'invisible': [('payment_type', '=', 'full')]}" invisible="1"/>
                            <field name="visa_appointment_date"/>
                            <field name="hotel_code"/>
                            <field name="flight_code"/>
                        </group>
                        <group>
                            <field name="reseller"/>
                            <field name="reseller_fee"/>
                            <field name="is_reseller_paid"/>
                            <field name="show_pay_reseller" invisible="1"/>
                            <button name="action_pay_reseller" string="Create Reseller Payment" type="object" attrs="{'invisible': ['|',('is_reseller_paid', '=', True),('reseller_fee','&lt;=',0.0)]}" class="oe_highlight"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Documents">
                                <field name="document_ids" nolable="1">
                                    <tree string="Documents" editable="bottom">
                                        <field name="name"/>
                                        <field name="doc_type"/>
                                        <field name="attachment"/>                                        
                                    </tree>
                                </field>
                            </page>
                            <page string="Invoices">
                                <field name="invoice_ids">
                                    <tree string="Invoices">
                                        <field name="name"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>

                </form>
            </field>
        </record>

        <record id="mt_trip_member_tree_view" model="ir.ui.view">
            <field name="name">trip.member.tree</field>
            <field name="model">trip.member</field>
            <field name="arch" type="xml">
                <tree string="Trip Member">
                    <field name="sequence" widget="handle"/>
                    <field name="partner_id"/>
                    <field name="invoice_ids" invisible="1"/>
                    <field name="document_ids" invisible="1"/>
                    <field name="is_document_completed"/>
                    <field name="reseller"/>
                    <field name="is_reseller_paid"/>
                    <button name="action_documents_create" string="Register Documents" type="object" attrs="{'invisible': [('document_ids', '!=', [])]}"/>
                    <field name="is_invoice_paid"/>
                    <button name="action_invoice_create" string="Create Invoices" type="object" attrs="{'invisible': [('invoice_ids', '!=', [])]}"/>
                    <button name="action_invoice_show" string="Show Invoices" type="object" attrs="{'invisible': [('invoice_ids', '=', [])]}"/>
               </tree>
            </field>
        </record>

        <record id="mt_trip_member_document_form_view" model="ir.ui.view">
            <field name="name">trip.member.document.form.view</field>
            <field name="model">trip.document</field>
            <field name="arch" type="xml">
                <form string="Trip Documents">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="doc_type"/>
                            <field name="attachment"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mt_trip_template_search_view" model="ir.ui.view">
            <field name="name">mt.trip.template.search</field>
            <field name="model">trip.template</field>
            <field name="arch" type="xml">
                <search string="Search Template">
                   <field name="name"/>
                   <group expand="0" name="group_by" string="Group By">
                       <filter name="name" string="Name" domain="[]" context="{'group_by' : 'name'}" />
                   </group>
               </search>
            </field>
        </record>

        <record id="trip_template_tree_view" model="ir.ui.view">
            <field name="name">trip.template.tree.view</field>
            <field name="model">trip.template</field>
            <field name="arch" type="xml">
                <tree string="Trip Template">
                    <field name="name"/>
                    <field name="trip_type"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="trip_template_from_view" model="ir.ui.view">
            <field name="name">trip.template.form.view</field>
            <field name="model">trip.template</field>
            <field name="arch" type="xml">
                <form string="Trip Template">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="trip_type"/>
                        </group>
                    </group>
                    <group>
                        <field name="documents">
                            <tree string="Documents Required" editable="bottom">
                                <field name="name"/>
                                <field name="doc_type"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                </form>
            </field>
        </record>


        <record id="action_trip_open" model="ir.actions.act_window">
             <field name="name">Trip</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">mt.trip</field>
             <field name="view_mode">tree,form</field>
             <field name="view_type">form</field>
             <field name="view_id" ref="mt_trip.mt_trip_tree_view"/>
             <field name="search_view_id" ref="mt_trip.mt_trip_search_view"/>
             <!-- <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1}</field> -->
             <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                     Create a new product
                 </p><p>
                     You must define a product for everything you purchase,
                     whether it's a physical product, a consumable or services.
                 </p>
             </field>
         </record>


        
        <menuitem id="menu_trip_open" name="Trip" action="action_trip_open" parent="mail.menu_root_discuss" sequence="20" groups="mt_trip.mt_group_admin"/>
        

        <record id="action_trip_template_open" model="ir.actions.act_window">
             <field name="name">Trip Template</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">trip.template</field>
             <field name="view_mode">tree,form</field>
             <field name="view_type">form</field>
             <field name="view_id" ref="mt_trip.trip_template_tree_view"/>
             <field name="search_view_id" ref="mt_trip.mt_trip_template_search_view"/>
             <!-- <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1}</field> -->
             <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                     ...
                 </p><p>
                    ...
                 </p>
             </field>
         </record>


        
        <menuitem id="menu_trip_template_open" name="Trip Template" action="action_trip_template_open" parent="mail.menu_root_discuss" sequence="30" groups="mt_trip.mt_group_admin"/>


        <!-- <menuitem id="menu_trip_open" name="Trip"
            parent="mail.menu_root_discuss"
            action="mt_trip.action_act_window_trip_view" sequence="10"/> -->
    </data>
</odoo>
